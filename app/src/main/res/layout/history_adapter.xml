<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/HistoryAdapter_LinearLayout"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_50"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/HistoryAdapter_ImageView"
            android:layout_width="@dimen/dp_30"
            android:layout_height="@dimen/dp_30"
            android:src="@mipmap/app_icon"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/HistoryAdapter_Name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:maxLines="1"
            android:ellipsize="end"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/black"
            android:text=""
            android:gravity="center_vertical|left"
            android:layout_marginLeft="@dimen/dp_10"
            />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">
            <TextView
                android:id="@+id/HistoryAdapter_Time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="11:26:55"
                android:gravity="right"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/black"/>
            <TextView
                android:id="@+id/HistoryAdapter_Elapsed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="运行"
                android:gravity="right"
                android:textSize="@dimen/sp_12"
                android:textColor="@color/f999999"/>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/gray_line"/>
</LinearLayout>