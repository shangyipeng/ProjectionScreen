<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_0F0F10"
    android:orientation="vertical"
    android:id="@+id/ElectronicFenceActivity_Linear">

    <include layout="@layout/incloud_layout"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite">
        <com.baidu.mapapi.map.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/dp_30"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/dp_30"
            android:paddingRight="@dimen/dp_30">

            <ImageView
                android:id="@+id/add_dianzi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_add_dianzi" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/img_chakan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_add_chakan" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_tishi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@color/baseColorBlack"
            android:gravity="center"
            android:paddingLeft="@dimen/dp_25"
            android:paddingTop="@dimen/dp_15"
            android:paddingRight="@dimen/dp_25"
            android:paddingBottom="@dimen/dp_15"
            android:text="请在地图上绘制出围栏区域"
            android:textColor="@color/blueEnd"
            android:textSize="@dimen/dp_20"
            android:textStyle="bold"
            android:visibility="gone" />
    </FrameLayout>

</LinearLayout>